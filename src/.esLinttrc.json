{
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 2023,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": ["error", "always"], 
      "padding-line-between-statements": [
        "error",
        { "blankLine": "always", "prev": "*", "next": "function" }, 
        { "blankLine": "always", "prev": "function", "next": "*" } 
      ]
    }
  }
  